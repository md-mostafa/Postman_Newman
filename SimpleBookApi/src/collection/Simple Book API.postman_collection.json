							"const response = pm.response.json();",
							"",
							"console.log(response.status);",
							"//console.log(response['status']);",
							"",
							"pm.test(\"status should be ok\", () => {",
							"    pm.expect(1).to.equal(1);",
							"});",
							"",
							"pm.test(\"status should be ok\", () => {",
							"    pm.expect(response.status).to.eql(\"OK\");",
							"})",
